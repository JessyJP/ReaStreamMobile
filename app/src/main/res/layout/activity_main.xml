<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Switch
        android:id="@+id/switchConnect"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:minHeight="48dp"
        android:text="@string/connectLabel"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/serverIPportInputView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/serverIPportInputView" />

    <WebView
        android:id="@+id/webControlView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="300dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </WebView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/serverIPportInputView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toStartOf="@+id/switchConnect"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="@string/server_ip_port"
            android:inputType="textUri"
            android:textSize="20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/reastreamLabelInputView"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="@string/reastream_identifier_label"
        app:layout_constraintEnd_toEndOf="@+id/switchConnect"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/serverIPportInputView"
        app:layout_constraintTop_toBottomOf="@+id/serverIPportInputView" />

    <EditText
        android:id="@+id/webControlURLinputView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/control_url_hint"
        android:inputType="textUri"
        android:minHeight="48dp"
        android:text="@string/control_url"
        app:layout_constraintBottom_toTopOf="@+id/webControlView"
        app:layout_constraintEnd_toEndOf="@+id/reastreamLabelInputView"
        app:layout_constraintHorizontal_bias="0.035"
        app:layout_constraintStart_toStartOf="@+id/serverIPportInputView" />

</androidx.constraintlayout.widget.ConstraintLayout>